@model BhartiNetwork.Models.Vendor

@{
    ViewBag.Title = "PurcheseOrder";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@using (Html.BeginForm("PurcheseOrder", "Vendor", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{   <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Purchase Order Details</h4>
                    <p style="color:red;">
                        @TempData["Vendor"]
                    </p>
                    @*<div class="row" style="padding-bottom:20px;">
                        <div class="col-sm-10">
                        </div>
                        <div class="col-sm-2">
                            <a href="/Admin/Project" class="btn btn-primary" style="border-radius:100px;">Add New</a>
                        </div>
                    </div>*@

                    <div class="row">
                        <div class="col-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <p style="color:red;">
                                        @TempData["Contact"]
                                    </p>
                                    <form class="forms-sample">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label for="exampleInputName1">PO No</label>
                                                    @Html.TextBoxFor(m => m.VendorId, new { @class = "form-control", @placeholder = "PO Number" })
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <input type="submit" value="Search" class="btn btn-success" style="margin-top:25px;" />
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">

                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>PO Number</th>
                                            <th>Purchase Date</th>
                                            <th>PO</th>
                                            @*<th>Action</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstVendorPOList != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstVendorPOList)
                                                {
                                                    <tr>
                                                        <td>@item.VendorId</td>
                                                        <td>@item.Date</td>
                                                        <td>
                                                            <a href="@item.file" download>
                                                                <i class="fa fa-file-pdf-o" style="font-size:25px;color:red">
                                                                    <i class="mdi mdi-download" style="font-size:25px;color:red"></i>
                                                                </i>
                                                            </a>
                                                        </td>
                                                        @*<td>
                                                            <a href="/Vendor/DeletePO?Id=@item.VendorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this record ?')">Delete</a>
                                                        </td>*@

                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}
