                                    <a href=""><i class="ri-twitter-fill"></i></a>
                                    <a href=""><i class="ri-facebook-fill"></i></a>
                                    <a href=""><i class="ri-instagram-fill"></i></a>
                                    <a href=""> <i class="ri-linkedin-box-fill"></i> </a>
                                </div>
                            </div>
                            <div class="pic"><img src="../assets/img/team/Sudip.jpeg" class="img-fluid" alt=""></div>
                        </div>
                    </div>


                </div>

            </div>
        </section><!-- End Team Section -->
        <!-- ======= Clients Section ======= -->
        <section id="clients" class="clients" style="background-color: #0000000d;">
            <div class="container" data-aos="zoom-in">
                <div class="section-title">
                    <h2>Our Clients</h2>
                </div>
                <div class="clients-slider swiper">
                    <div class="swiper-wrapper align-items-center">
                        @if (Model != null)
                        {
                            if (Model.lstClient != null)
                            {
                                int i = 1;
                                foreach (var item in Model.lstClient)
                                {
                                    <div class="swiper-slide"><img src="@item.Image" class="img-fluid" alt="ncr"></div>
                                    i++;
                                }
                            }
                        }
                    </div>
                    <div class="swiper-pagination"></div>
                </div>

            </div>
        </section><!-- End Clients Section -->


    </main><!-- ===============================================-->


