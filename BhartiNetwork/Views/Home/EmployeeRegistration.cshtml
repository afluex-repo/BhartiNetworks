                            <div class="col-md-6 form-group">
                                <label>Name<span style="color: red">*</span></label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name" })
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Father Name</label>
                                @Html.TextBoxFor(m => m.FatherName, new { @class = "form-control", @placeholder = "Father Name" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6 form-group">

                                <label>Gender</label>
                                <select class="form-control" id="Gender" name="Gender" tabindex="-98">
                                    <option>Select One</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Others</option>
                                </select>
                             
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <label>DOB </label>
                                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", @placeholder = "DOB",@readonly="true" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6 form-group">
                                <label>Designation<span style="color: red">*</span></label>
                                @Html.TextBoxFor(m => m.Designation, new { @class = "form-control", @placeholder = "Designation" })
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Blood Group<span style="color: red">*</span></label>
                                @Html.TextBoxFor(m => m.BloodGroup, new { @class = "form-control", @placeholder = "Blood Group" })
                            </div>
                            </div>
                        <div class="row mt-3">
                            <div class="col-sm-2">
                                <label>Code</label>
                                @Html.DropDownListFor(m => m.CountryCode, new SelectList(ViewBag.ddlCountryCode, "Text", "Text"), new { @class = "form-control" })
                                @*<select class="form-control" name="cd" id="cd">
                                    <option value="0">Select</option>
                                    <option>+91</option>
                                    <option>+92</option>
                                    <option>+93</option>
                                    <option>+94</option>
                                </select>*@
                            </div>
                                <div class="col-md-4 form-group">
                                    <label>Mobile<span style="color: red">*</span></label>
                                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control",@maxlength="10", @placeholder = "Mobile", @onkeypress = "return isNumberKey(event)" })
                                </div>
                                <div class="col-md-6 form-group mt-3 mt-md-0">

                                    <label>Email<span style="color: red">*</span></label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                </div>
                            </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Upload File</label>
                                <input type="file" name="postedFile" id="postedFile" class="form-control" />
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Address</label>
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                            </div>
                        </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <div class="container">
                            <div class="text-center "><button type="submit" onclick="return validateform();">Submit Form</button></div>
                        </div>
                        @*</form>*@

                    </div>

                </div>

            </div>
        </section><!-- End Contact Section -->
        <!-- <section> close ============================-->
        <!-- ============================================-->


    </main><!-- ===============================================-->


