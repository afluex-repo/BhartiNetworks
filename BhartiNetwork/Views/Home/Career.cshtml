@model BhartiNetwork.Models.Home
@{
    ViewBag.Title = "Career";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumb-wrapper section-padding bg-cover" style="background-image: url('/assets/img/breadcrumb/career.jpg');">
    <div class="container">
        <div class="page-heading">
            <h1 class="wow fadeInUp" data-wow-delay=".3s">Career</h1>
            <ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".5s">
                <li>
                    <a href="index.html">
                        Home Page
                    </a>
                </li>
                <li>
                    <i class="fal fa-minus"></i>
                </li>
                <li>
                    Career
                </li>
            </ul>
        </div>
    </div>
</div>

<section class="job-application-form py-5">
    <div class="container">
        <div class="row align-items-center">

            <!-- Left Side Image -->
            <div class="col-lg-4 col-md-12 mb-4 mb-lg-0 wow fadeInLeft" data-wow-delay=".3s">
                <img src="https://bhartinetworks.com/assets/img/career-form-1.png" alt="Job Form Image" class="img-fluid rounded h-100 w-100 shadow">
            </div>

            <!-- Right Side Form -->
            <div class="col-md-12 col-lg-8 wow fadeInRight" data-wow-delay=".5s">
                <div class="checkout-single-wrapper">
                    <div class="checkout-single boxshado-single shadow">
                        <h4 class="mb-4 text-center h3">Job Application Form</h4>
                        <div class="checkout-single-form">
                         @using (Html.BeginForm("Career", "Home", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
                         {


                                <div class="row g-4">
                                    <p style="color:red;">
                                        @TempData["Career"]
                                    </p>
                                    <!-- Full Name -->
                                    <div class="col-md-12 form-group">
                                        <div class="input-single">
                                           @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter Your Name", @onkeypress= "return onlyAlphabets();" })
                                        </div>
                                    </div>

                                    <!-- Mobile & Email -->
                                    <div class="col-md-6 form-group">
                                        <div class="input-single">
                                       @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @placeholder = "Mobile Number", @onkeypress = "return isNumberKey(event)", @maxlength = "10" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <div class="input-single">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Your Email", @onchange = "return ValidateEmail(event);" })
                                        </div>
                                    </div>

                                    <!-- Position & Qualification -->
                                    <div class="col-md-6 form-group">
                                        <div class="input-single">
                                            <select class="form-control" id="Designation" value="0" name="Designation" required>
                                                <option value="0">Select Your Position</option>
                                                <option>Site Engineers</option>
                                                <option>Survey Engineers</option>
                                                <option>Trainee Engineers</option>
                                                <option>Technicians</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <div class="input-single">
                                            <select class="form-control" name="Qualification" id="Qualification">
                                                <option value="0">Select Your Qualification</option>
                                                <option>B. Tech</option>
                                                <option>Diploma</option>
                                                <option>I.T.I. – Electronics & Communications</option>
                                                <option>Electrical only</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Location & Experience -->
                                    <div class="col-md-6 form-group">
                                        <div class="input-single">
                                            @Html.TextBoxFor(m => m.Location, new { @class = "form-control", @placeholder = "Preferred Location" })
                                        </div>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <div class="input-single">
                                             @Html.TextBoxFor(m => m.Experience, new { @class = "form-control", @placeholder = "Year Of Experience", @onkeypress = "return isNumberKey(event)" })
                                        </div>
                                    </div>

                                    <!-- Resume Upload -->
                                    <div class="col-lg-12">
                                        <div class="input-single">
                                            <input type="file" class="form-control" style="line-height: 2.2;" accept=".pdf,.doc" name="postedFile" id="postedFile" placeholder="Submit Your Cover Letter or Resume">
                                        </div>
                                    </div>

                                    <!-- Address -->
                                    <div class="col-lg-12">
                                        <div class="input-single">
                                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                                        </div>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="col-lg-6 col-md-6">

                                        @*<div class="theme-btn"><button type="submit" onclick="return validateform();">Submit Form</button></div>*@


                                        <button type="submit" id="submit" name="submit" class="theme-btn" onclick="return validateform();">
                                            <span><i class="fal fa-paper-plane"></i> Submit Application</span>
                                        </button>
                                    </div>

                                </div>
                         }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
      function validateform() {
       
        $(".errortext").removeClass("errortext");
        if ($('#Name').val() == '') {
            $("#Name").addClass('errortext');
            $('#Name').focus();
            return false;
        }
        
        if ($('#Mobile').val() == '') {
            $("#Mobile").addClass('errortext');
            $('#Mobile').focus();
                return false;
            }
        if ($('#Email').val() == '') {
            $("#Email").addClass('errortext');
            $('#Email').focus();
                return false;
            }
        if ($('#Designation').val() == '0') {
            $("#Designation").addClass('errortext');
            $('#Designation').focus();
                return false;
        }
        if ($('#Qualification').val() == '0') {
            $("#Qualification").addClass('errortext');
            $('#Qualification').focus();
            return false;
        }
        if ($('#Location').val() == '') {
            $("#Location").addClass('errortext');
            $('#Location').focus();
            return false;
        }
        if ($('#Location').val() == '') {
            $("#Location").addClass('errortext');
            $('#Location').focus();
            return false;
        }
        if ($('#Experience').val() == '') {
            $("#Experience").addClass('errortext');
            $('#Experience').focus();
            return false;
        }
        if ($('#postedFile').val() == '') {
            $("#postedFile").addClass('errortext');
            $('#postedFile').focus();
            return false;
        }
        if ($('#Address').val() == '') {
            $("#Address").addClass('errortext');
            $('#Address').focus();
            return false;
        }
    }
      function isNumberKey(evt) {
          var charCode = (evt.which) ? evt.which : event.keyCode;
          if (charCode != 46 && charCode > 31
            && (charCode < 48 || charCode > 57))
              return false;
          return true;
      }
      function onlyAlphabets(e, t) {
          try {
              if (window.event) {
                  var charCode = window.event.keyCode;
              }
              else if (e) {
                  var charCode = e.which;
              }
              else { return true; }
              if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123) || (charCode == 32))
                  return true;
              else
                  return false;
          }
          catch (err) {
              alert(err.Description);
          }
      }


      function ValidateEmail(event) {
          var panVal = $('#Email').val();
          var regpan = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;

          if (regpan.test(panVal)) {
              $("#Email").removeClass('errortext');
          } else {
              alert("Invalid Email ID");
              $("#Email").val('');
              $("#Email").addClass('errortext');
          }
      }
      
</script>

<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>
















