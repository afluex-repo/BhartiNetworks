@model BhartiNetwork.Models.Home

@{
    ViewBag.Title = "ClientList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ClientList", "Home", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
         @*<!-- ======= Hero Section ======= -->
    <section id="hero-new" class="d-flex justify-cntent-center align-items-center heroproject">
        <div id="heroCarousel" data-bs-interval="5000" class="container carousel carousel-fade" data-bs-ride="carousel">

            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="carousel-container">
                    <h2 class="animate__animated animate__fadeInDown text-uppercase text-white text-center mb-0 fs-md-4 fs-2 ">Our Projects</h2>
                </div>
            </div>
        </div>
    </section><!-- End Hero -->*@


  <!-- ============================================-->
      <!-- <section> begin ============================-->
    @*<section class="py-4 "></section>*@<!-- <section> close ============================-->
      <!-- ============================================-->
    <main id="main">
        <section id="clients" class="clients" style="background-color: #0000000d;">
            <div class="container" data-aos="zoom-in">
                <div class="section-title">
                    <h2>Our Clients</h2>
                </div>

                @if (Model != null)
                {
                    if (Model.lstClient != null)
                    {
                        int i = 1;
                        foreach (var item in Model.lstClient)
                        {
                            <div class="clients-slider swiper">
                                <div class="swiper-wrapper align-items-center">
                                    <div class="swiper-slide"><img src="@item.Image"></div>
                                </div>
                                <div class="swiper-pagination"></div>
                            </div>
                            i++;
                        }
                    }
                }
              
            </div>
        </section>
    </main><!-- ===============================================-->


  <!-------==========Whatsapp==================---------->
