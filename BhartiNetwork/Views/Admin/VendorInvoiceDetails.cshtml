@model BhartiNetwork.Models.Admin

@{
    ViewBag.Title = "VendorInvoiceDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("VendorInvoiceDetails", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Vendor Invoice List</h4>
                <p style="color:red;">
                    @TempData["Invoice"]
                </p>
                <div class="row" style="padding-bottom:20px;">
                    <div class="col-sm-10">
                    </div>
                    <div class="col-sm-2">
                        @*<a href="/Admin/Project" class="btn btn-primary" style="border-radius:100px;">Add New</a>*@
                    </div>
                </div>

                <div class="row" style="margin-bottom:20px;">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="exampleInputName1">Invoice No</label>
                            @Html.TextBoxFor(m => m.InvoiceNo, new { @class = "form-control", @placeholder = "Invoice No" })
                        </div>
                    </div>
                    @*<div class="col-sm-2">
                        <div class="form-group">
                            <label for="exampleInputEmail3">From Appro/Decl Date</label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy", autocomplete = "off" })
                        </div>
                    </div>*@
                    @*<div class="col-sm-2">
                        <div class="form-group">
                            <label for="exampleInputEmail3">To Appro/Decl Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy", autocomplete = "off" })
                        </div>
                    </div>*@
                    <div class="col-sm-3">
                        <input type="submit" value="Search" class="btn btn-success" style="margin-top:25px;" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">

                        <div class="table-responsive">
                            <table id="file_export" class="table table-striped table-bordered display">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Invoice No</th>
                                        <th>Invoice</th>
                                        <th>Upload Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.VendorInvoicelst != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.VendorInvoicelst)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.InvoiceNo</td>
                                                    <td>
                                                        <a href="@item.Image" download>
                                                            <i class="fa fa-file-pdf-o" style="font-size:25px;color:red">
                                                                <i class="mdi mdi-download" style="font-size:25px;color:red"></i>
                                                            </i>
                                                        </a>
                                                    </td>
                                                    <td>@item.AddedOn</td>
                                                    <td><a href="/Admin/DeleteVendorInvoice?Id=@item.InvoiceId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this record ?')">Delete</a></td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
}




