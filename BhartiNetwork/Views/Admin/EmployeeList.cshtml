@model BhartiNetwork.Models.Admin

@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2></h2>
@using (Html.BeginForm("EmployeeList", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{   <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Employee List</h4>
                    <p style="color:red;">
                        @TempData["Employee"]
                    </p>
                    <div class="row" style="padding-bottom:20px;">
                        <div class="col-sm-10">
                        </div>
                        <div class="col-sm-2">
                            @*<a href="/Admin/Project" class="btn btn-primary" style="border-radius:100px;">Add New</a>*@
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">

                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>LoginId</th>
                                            <th>Password</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Email</th>
                                            <th>DOB</th>
                                            <th>Address</th>
                                            <th>Status</th>
                                            <th style="display:none">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstVendor != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstVendor)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.LoginId</td>
                                                        <td>@item.Password</td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Mobile</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.Date</td>
                                                        <td>@item.Address</td>
                                                        <td>@item.Status</td>
                                                        <td style="display:none">
                                                            <a href="/Admin/DeleteEmp?Id=@item.Employeeid" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want delete this record ?')">Delete</a>
                                                            <a href="/Admin/AproveEmp?Id=@item.Employeeid" class="btn btn-success btn-sm" onclick="return confirm('Are you sure you want approve this record ?')">Approve</a>
                                                            <a href="/Admin/DeclineEmp?Id=@item.Employeeid" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want decline this record ?')">Decline</a>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    var VendorId = $("#VendorId").val();
</script>
