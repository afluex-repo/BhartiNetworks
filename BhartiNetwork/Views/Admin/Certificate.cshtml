    <link href="~/AdminCss/assets/css/certificate_style.css" rel="stylesheet" />
    <link href="../assets/img/bn-favicon.png" rel="icon">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    <style>
        * {
  box-dizing: border-box;
}

div {
  .portrait, .landscape {
    border: 1px solid red;
    font-size: 28px;
  }
}
$ratio: 0.5;
.portrait_wrapper {
  overflow: hidden;
  width: 595px * $ratio + 2;
  height: 842px * $ratio + 2;
}
.portrait {
  width: 595px;
  height: 842px;
  transform: scale($ratio);
  transform-origin: 0 0 ;
}
.landscape_wrapper {
  overflow: hidden;
  width: 842px * $ratio + 2;
  height: 594px * $ratio + 2;
}
.landscape {
  width: 842px;
  height: 594px;
  transform: scale($ratio);
  transform-origin: 0 0 ;
}

