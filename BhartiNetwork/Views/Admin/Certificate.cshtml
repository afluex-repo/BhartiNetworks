
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print Certificate</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" media="all" rel="stylesheet" id="bootstrap-css">
    <link href="~/AdminCss/assets/css/certificate_style.css" rel="stylesheet" media="all" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js" media="all"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js" media="all"></script>
    <link href="../assets/img/bn-favicon.png" rel="icon">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    <style type="text/css" media="print">
        @@media print {
            .hide-print {
                display: none;
            }
           .title
           {
               font-size:30px !important;
           }
           .certificate-header
           {
               margin-left:40px !important;
               margin-top:20px !important;
           }
           .certificate
           {
               width:800px !important;
               /*margin:0px !important;*/
                margin:0px auto !important;
               padding:0px !important;
               margin-left:-65px !important;
              
           }
           .certificate_no
           {
              margin-top:-40px !important;
              margin-right:40px !important;
           }
           .certificate-footer span
           {
               margin-left:70px !important;
               margin-right:70px !important;
           }
        }
    </style>
</head>
<body>

    <div class="container" style="margin-top:20px;">
        <div class="row">
            <div class="col-md-10 text-right">
                <input type='button' class="btn btn-primary btn-lg hide-print" id='btn-print' value='Print' onclick="window.print()" />
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-md-10" style="margin:0 auto">
                <div class="certificate-container">
                    <div class="certificate">
                        <div class="row">
                            <div class="col-md-6 text-left" style="display:inline-block">
                                <div class="certificate-header" style="padding:10px;background-color: #0c5280;display:inline-block !important;">
                                    <img src="~/assets/img/logo.png" class="logo" alt="">
                                </div>
                            </div>
                            <div class="col-md-6 text-right">
                                <h4 class="certificate_no" styl="display:inline-block !important;">
                                   Certificate No. <b>@ViewBag.CertificateNo</b>
                                </h4>
                            </div>
                        </div>
                        <div class="certificate-body mt-5 text-center" style="margin-top:50px;">
                            <p class="text-uppercase title mb-5" style="margin-bottom:40px;font-size:20px;">Certificate of Internship</p>
                            <div class="certificate-content mt-4" style="margin-top:50px;">
                                <div class="about-certificate">
                                    <span style="display:inline">
                                        This is to certify that Mr/Miss  <span><b>@ViewBag.Name  </b></span>
                                        Son/Daughter of Sri/Smt<span> <b>@ViewBag.Father  </b> </span>
                                        Student of B.Tech/Diploma/ITI  <b>@ViewBag.Degree  </b> College <b>@ViewBag.UniverSity  </b>
                                        has undergone tech training from <b>@ViewBag.FromDate</b> to <b>@ViewBag.ToDate</b>
                                        for his/her outstanding completion of the internship program at Bharti Networks.
                                    </span>
                                </div>
                            </div>
                            <div class="certificate-footer mt-5" style="margin:50px 40px 20px 40px">
                                <div class="row">
                                    <div class="col-md-4 text-left" style="display:inline">
                                        <span style="display:inline"><b>HR Admin</b></span>
                                    </div>
                                    <div class="col-md-4 text-center" style="display:inline">
                                        <img src="~/assets/img/medal_img.png" style="height:80px;" class="img-fluid" alt="">
                                    </div>
                                    <div class="col-md-4 text-right" style="display:inline" >
                                        <span style="display:inline">
                                            <b>Training Officer</b>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
