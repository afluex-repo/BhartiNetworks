@model BhartiNetwork.Models.Admin

@{
    ViewBag.Title = "GetVendorDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("GetVendorDetails", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{   <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Vendor List</h4>
                    <p style="color:red;">
                        @TempData["Vendor"]
                    </p>
                    <div class="row" style="padding-bottom:20px;">
                        <div class="col-sm-10">
                        </div>
                        <div class="col-sm-2">
                            @*<a href="/Admin/Project" class="btn btn-primary" style="border-radius:100px;">Add New</a>*@
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">

                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>LoginId</th>
                                            <th>Password</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            <th>Circle</th>
                                            <th>Organization Name</th>
                                            <th>Organization Starting</th>
                                            <th>Account No</th>
                                            <th>Branch</th>
                                            <th>Deposit</th>
                                            <th>Organization Type</th>
                                            <th>Pan Number</th>
                                            <th>GST No</th>
                                            <th>Designation</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstVendor != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstVendor)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.LoginId</td>
                                                        <td>@item.Password</td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Mobile</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.Address</td>
                                                        <td>@item.Circle</td>
                                                        <td>@item.OrganizationName</td>
                                                        <td>@item.StartingofOrganization</td>
                                                        <td>@item.AccountNo</td>
                                                        <td>@item.Branch</td>
                                                        <td>@item.Deposit</td>
                                                        <td>@item.OrganizationType</td>
                                                        <td>@item.PanNo</td>
                                                        <td>@item.GSTNo</td>
                                                        <td>@item.Designation</td>
                                                        <td>
                                                            <a href="/Admin/DeleteVendor?Id=@item.VendorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want delete this record ?')">Delete</a>
                                                            <a href="/Admin/AproveVendor?Id=@item.VendorId" class="btn btn-info btn-sm" onclick="return confirm('Are you sure you want aprove this record ?')">Aprove</a>
                                                            <a href="/Admin/DeclineVendor?Id=@item.VendorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want decline this record ?')">Decline</a>
                                                        </td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

