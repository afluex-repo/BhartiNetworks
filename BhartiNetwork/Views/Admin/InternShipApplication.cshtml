
@{
    ViewBag.Title = "InternShipApplication";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .form-group label
    {
        vertical-align:sub !important;
    }
</style>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/assets/img/logo.png" class="logo img-fluid" style="width:200px;" alt="">
                    </div>
                    <div class="col-md-4">
                        <h4>Intership Application Form</h4>
                        <p>(Fill all fields in Block letters)</p>
                    </div>
                    <div class="col-md-4 text-right">
                        <img src="~/AdminCss/assets/images/user.png" class="img-fluid" style="height:100px;" /> 
                    </div>
                  </div>
                <div class="row mt-4 mb-4">
                    <div class="col-md-12">
                        <h3>Personal Information</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-md-4">
                                <label>Student Name</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-md-4">
                                <label>Father's Name</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-md-4">
                                <label>Date Of Birth</label>
                            </div>
                            <div class="col-md-8">
                                <input type="date" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label>Postal Address</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    <div class="col-sm-6 form-group">
                        <label>Permanent Address</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    @*<div class="col-sm-2 form-group">
                        <label>Permanent Address</label>
                    </div>
                    <div class="col-sm-10 form-group">
                      
                    </div>*@
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="row form-group">
                                    <div class="col-sm-4">
                                        <label>Domicile</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="row form-group">
                                    <div class="col-sm-4">
                                        <label>Cell No.</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="row form-group">
                                    <div class="col-sm-4">
                                        <label>Phone No.</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="row form-group">
                                    <div class="col-sm-4">
                                        <label>Gender</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <select class="form-control">
                                            <option>-- select --</option>
                                            <option>Male</option>
                                            <option>Female</option>
                                            <option>Other</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="row form-group">
                                    <div class="col-sm-4">
                                        <label>Religion</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="row form-group">
                                    <div class="col-sm-4">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="email" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4 mb-4">
                    <div class="col-md-12">
                        <h3>Qualification in progress</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-sm-4">
                                <label>Degree</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-sm-4">
                                <label>Discipline</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="number" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-sm-4">
                                <label>Semester</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-sm-4">
                                <label>CGPA</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-sm-4">
                                <label>Registration No.</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="number" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="row form-group">
                            <div class="col-sm-4">
                                <label>Roll No.</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="number" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>University</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-3">
                                <label>Final Year Project (if any)</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 mt-4 mb-4">
                        <h3>Previous Academic Record</h3>
                    </div>
                    <div class="col-sm-12 table-responsive">
                        <table class="table table-striped table-bordered display">
                            <thead>
                                <tr>
                                    <th>Degree/Certificate</th>
                                    <th>Passing Year</th>
                                    <th>Marked Obtained/Total Marks & GPA</th>
                                    <th>Division/Grade</th>
                                    <th>Institute/Board</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-sm-12 mb-4 mt-4">
                        <h5>In case applicant is son/daughter of POF employee/Ex- POF employee</h5>
                    </div>
                    <div class="col-sm-12 table-responsive">
                        <table class="table table-striped table-bordered display">
                            <thead>
                                <tr>
                                    <th>Name of Father/Mother</th>
                                    <th>Designation</th>
                                    <th>PI. No</th>
                                    <th>Fy/Grp/Dept</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-sm-12">
                        <h4 class="mt-4 mb-4">Proposed Intership Date</h4>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <label>From</label>
                                    </div>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-2">
                                        <label>To</label>
                                    </div>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-sm-6">
                        <div class="row form-group">
                            <div class="col-sm-2">
                                <label>Date</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="date" class="form-control"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row form-group">
                            <div class="col-sm-3">
                                <label>Student's Signature</label>
                            </div>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Submit" class="btn btn-info mt-5" id="btnsave" name="btnsave"/>
                </div>
            </div>
        </div>
    </div>


