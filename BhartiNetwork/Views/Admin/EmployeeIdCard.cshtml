@model BhartiNetwork.Models.Admin

@{
    ViewBag.Title = "EmployeeIdCard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




@using (Html.BeginForm("EmployeeIdCard", "Admin", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container d-flex align-items-center justify-content-center">
        <div class="row" id="printdivcontent">
            <!--Profile Card 3-->
            <div class="col-md-12">
                <div class="profile-card-3">
                    <div class="background-block" style="background-color: #1e67a8;">
                        <div class="mt-3 w-100 float-left text-center text-orange">
                            <button id="cmd">generate PDF</button>
                            <img src="~/assets/img/logo.png" alt="" class="img-fluid" style="width: 150px">
                        </div>
                    </div>
                    <div class="profile-thumb-block">
                        <img src="~/assets/img/team/team-2.jpg" alt="profile-image" class="profile" />
                    </div>
                    <div class="card-content">
                        <h2 class="text-center">@ViewBag.Name<span class="text-orange"><small>@ViewBag.Designation</small></span></h2>
                        <table class="id_ul">
                            <tr>
                                <td><strong>ID No :</strong></td>
                                <td>@ViewBag.LoginId</td>
                            </tr>
                            <tr>
                                <td><strong>Blood :</strong></td>
                                <td>@ViewBag.BloodGroup</td>
                            </tr>
                            <tr>
                                <td><strong>Join :</strong></td>
                                <td>@ViewBag.ApproveDeclineDate</td>
                            </tr>
                            <tr>
                                <td><strong>Expire :</strong></td>
                                <td>@ViewBag.ExpiaryDate</td>
                            </tr>
                            <tr>
                                <td><strong>Phone :</strong></td>
                                <td>@ViewBag.Mobile</td>
                            </tr>
                            <tr>
                                <td><strong>Email :</strong></td>
                                <td>@ViewBag.Email</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div id="editor"></div>
            </div>
        </div>
    </div>
}
<!-- Vendor JS Files -->

<link href="~/assets/css/cssid.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.debug.js"></script>
<script type="text/javascript">
    var doc = new jsPDF();
    var specialElementHandlers = {
        '#editor': function (element, renderer) {
            return true;
        }
    };
    $('#cmd').click(function () {
        doc.fromHTML($('#printdivcontent').html(), 15, 15, {
            'width': 170,
            'elementHandlers': specialElementHandlers
        });
        doc.save('sample-file.pdf');
    });
</script>
