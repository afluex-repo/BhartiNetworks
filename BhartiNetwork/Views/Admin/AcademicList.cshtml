@model BhartiNetwork.Models.Admin

@{
    ViewBag.Title = "AcademicList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AcademicList", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{   <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">

                    
                    <p style="color:red;">
                        @*@TempData["PO"]*@
                    </p>
                    <div class="row" style="padding-bottom:20px;">
                        <div class="col-sm-10">
                            <h4 class="card-title">Academic List</h4>
                        </div>
                        <div class="col-sm-2">
                            <a href="/Admin/InternShipApplicationList" class="btn btn-success">Back</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">

                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>Certificate</th>
                                            <th>Passing Year</th>
                                            <th>Marks Obtained/Total Marks GPA</th>
                                            <th>Division</th>
                                            <th>Board</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstAccadamic != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstAccadamic)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.Certificate</td>
                                                        <td>@item.PassingYear</td>
                                                        <td>@item.MarksObtainedTotalMarksGPA</td>
                                                        <td>@item.Division</td>
                                                        <td>@item.Board</td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}



