    <div class="id-card-tag-strip"></div>
    <div class="id-card-hook"></div>
    <div class="id-card-holder">
        <div class="id-card">
            <div class="header">
                <img src="~/assets/img/logo.png">
                <i class="fa fa-print" style="font-size:24px;float:right" id="printpagebutton" onclick="printpage()"></i>
            </div>
            <div class="photo profile-thumb-block">
                <img src="@ViewBag.Image" alt="profile-image" class="profile" />
            </div>
            <h2>@ViewBag.Name</h2>
            <small>@ViewBag.Designation</small>
            <br />
            <br />
            <h3><strong>ID No </strong>: @ViewBag.LoginId</h3>
