@model BhartiNetwork.Models.Employee

@{
    ViewBag.Title = "EmployeeDashboard";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2></h2>
@using (Html.BeginForm("EmployeeDashboard", "Employee", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-3 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <img src="@ViewBag.Image" class="img-fluid" style="width:200px;height:320px; border-radius:80%" />

                </div>
            </div>
        </div>
        <div class="col-md-9 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                   
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="preview-list">
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-primary">
                                            <i class="mdi mdi-file-document"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Login Id  :  @ViewBag.LoginId</h6>
                                          
                                        </div>
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Name  :  @ViewBag.Name</h6>
                                         
                                        </div>
                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                            @*<p class="text-muted">15 minutes ago</p>
                                                <p class="text-muted mb-0">30 tasks, 5 issues </p>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-success">
                                            <i class="mdi mdi-cloud-download"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Blood Group : @ViewBag.BloodGroup</h6>
                                            @*<p class="text-muted mb-0">Upload new design</p>*@
                                        </div>
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Email : @ViewBag.Email</h6>
                                            @*<p class="text-muted mb-0">Upload new design</p>*@
                                        </div>
                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                            @*<p class="text-muted">1 hour ago</p>
                                                <p class="text-muted mb-0">23 tasks, 5 issues </p>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-info">
                                            <i class="mdi mdi-clock"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Mobile : @ViewBag.Mobile</h6>
                                            @*<p class="text-muted mb-0">New project discussion</p>*@
                                        </div>
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Address : @ViewBag.Address</h6>
                                            @*<p class="text-muted mb-0">New project discussion</p>*@
                                        </div>
                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                            @*<p class="text-muted">35 minutes ago</p>
                                                <p class="text-muted mb-0">15 tasks, 2 issues</p>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-danger">
                                            <i class="mdi mdi-email-open"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                      
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Designation : @ViewBag.Designation</h6>
                                            @*<p class="text-muted mb-0">Sent release details to team</p>*@
                                        </div>
                                        @*<div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                                <p class="text-muted">55 minutes ago</p>
                                                <p class="text-muted mb-0">35 tasks, 7 issues </p>
                                            </div>*@
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
