@model BhartiNetwork.Models.Home

@{
    ViewBag.Title = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Project", "Home", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
         <!-- ======= Hero Section ======= -->
    <section id="hero-new" class="d-flex justify-cntent-center align-items-center heroproject">
        <div id="heroCarousel" data-bs-interval="5000" class="container carousel carousel-fade" data-bs-ride="carousel">

            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="carousel-container">
                    <h2 class="animate__animated animate__fadeInDown text-uppercase text-white text-center mb-0 fs-md-4 fs-2 ">Our Projects</h2>
                </div>
            </div>
        </div>
    </section><!-- End Hero -->


  <!-- ============================================-->
      <!-- <section> begin ============================-->
    <section class="py-4 "></section><!-- <section> close ============================-->
      <!-- ============================================-->
    <main id="main">
        <section class="bg-white pt-7">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 d-flex flex-column " data-aos="fade-left">
                        <div class="section-title my-3">
                            <div class="col-12">

                                @if (Model != null)
                                {
                                    if (Model.lstProject != null)
                                    {
                                        int i = 1;
                                        foreach (var item in Model.lstProject)
                                        {
                                            <div class="row my-5 content project">
                                                <div class="col-lg-6 text-start">
                                                    <h2>@item.Name</h2>
                                                    <p class="fs-5 mt-2 text-orange">Date :-</p>
                                                    <p class="text-start text-justify"><strong>@item.Date</strong></p>
                                                    <p class="fs-5 text-orange">Details :-</p>
                                                    <p class="text-start text-justify">@item.Details</p>
                                                </div>
                                                <div class="col-lg-6 text-end">
                                                    <img src="@item.Image" style="height:200px;width:350px;">
                                                </div>
                                            </div>
                                            i++;
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </section>
    </main><!-- ===============================================-->


