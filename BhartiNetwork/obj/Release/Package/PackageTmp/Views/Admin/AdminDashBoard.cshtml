@model BhartiNetwork.Models.Admin

@{
    ViewBag.Title = "AdminDashBoard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AdminDashBoard", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.TotalProjects</h3>
                                <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success ">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Total Projects</h6>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.TotalEnquiry</h3>
                                <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Total Enquiry</h6>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.TotalVendors</h3>
                                <p class="text-success ml-2 mb-0 font-weight-medium"></p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Total Vendor</h6>
                </div>
            </div>
        </div>

    </div>
    
     <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @*<h4 class="card-title">Vendor List</h4>*@
                    <p style="color:red;">
                        @TempData["Vendor"]
                    </p>
                    <div class="row" style="padding-bottom:20px;">
                        <div class="col-sm-10">
                            <h4 class="card-title">Vendor List</h4>
                        </div>
                        <div class="col-sm-2">
                            <a href="/Admin/GetVendorDetails" class="btn btn-info" style="border-radius:100px;">Vendor Details..</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">

                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>LoginId</th>
                                            <th>Name</th>
                                            <th>Mobile</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            @*<th>Circle</th>*@
                                            <th>Organization Name</th>
                                            @*<th>Organization Starting</th>*@
                                            @*<th>Account No</th>*@
                                            @*<th>Branch</th>*@
                                            @*<th>Deposit</th>*@
                                            @*<th>Organization Type</th>*@
                                            @*<th>Pan Number</th>*@
                                            @*<th>GST No</th>*@
                                            <th>Designation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstVendor != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstVendor)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.LoginId</td>
                                                        @*<td>@item.Password</td>*@
                                                        <td>@item.Name</td>
                                                        <td>@item.Mobile</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.Address</td>
                                                        @*<td>@item.Circle</td>*@
                                                        <td>@item.OrganizationName</td>
                                                        @*<td>@item.StartingofOrganization</td>*@
                                                        @*<td>@item.AccountNo</td>*@
                                                        @*<td>@item.Branch</td>*@
                                                        @*<td>@item.Deposit</td>*@
                                                        @*<td>@item.OrganizationType</td>*@
                                                        @*<td>@item.PanNo</td>*@
                                                        @*<td>@item.GSTNo</td>*@
                                                        <td>@item.Designation</td>
                                                        @*<td>
                                                            <a href="/Admin/DeleteVendor?Id=@item.VendorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want delete this record ?')">Delete</a>
                                                        </td>*@
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @*<h4 class="card-title">Contact List</h4>*@
                    <p style="color:red;">
                        @TempData["Contact"]
                    </p>
                    <div class="row" style="padding-bottom:20px;">
                        <div class="col-sm-10">
                            <h4 class="card-title">Contact List</h4>
                        </div>
                        <div class="col-sm-2">
                            <a href="/Admin/GetContactList" class="btn btn-info" style="border-radius:100px;">Contact Details..</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">

                            <div class="table-responsive">
                                <table id="file_export" class="table table-striped table-bordered display">
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Subject</th>
                                            <th>Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstContact != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstContact)
                                                {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.Name</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.Subject</td>
                                                        <td style="white-space:pre-line;">@item.Address</td>
                                                        @*<td>
                                                                <a href="/Admin/ContactDelete?Id=@item.ContactId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want delete this record ?')">Delete</a>
                                                            </td>*@
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    
}




